{% extends "layout.html.j2" %}
{% block content %}
  <div id="all">
    <h1>All sponsors</h1>
    {% for sponsor in sponsors %}
    {% if loop.index0 is divisibleby 3 %}
    <div class="row">
    {% endif %}
      <div class="col-sm-4">
        <div class="sponsor card" id="{{ sponsor.username }}">
          <div class="card-body">
            <h3 class="card-title">{{ sponsor.human_name }}</h3>
            <table>
              <tr><th>Username:</th><td>{{ sponsor.username }}</td></tr>
              <tr><th>Email:</th><td>{{ sponsor.emails | join(', ') }}</td></tr>
              {% if sponsor['ircnicks'] %}
              <tr><th>IRC nick:</th><td>{{ sponsor.ircnicks | join(', ') }}</td></tr>
              {% endif %}
              <tr><th>Timezone:</th><td>{{ sponsor.timezone }}</td></tr>
              <tr>
                <th>See also:</th>
                <td>
                  <a href="{{ sponsor.accounts_fpo_url }}">Profile</a>,
                  <a href="{{ sponsor.wiki_url }}">Wiki</a>
                </td>
              </tr>
            </table>

          </div>
        </div>
      </div>
    {% if loop.index is divisibleby 3 %}
    </div>
    {% endif %}
    {% endfor %}
  </div>
{% endblock %}
